# Production Environment Variables
# Copy this file to .env and fill in the values for your production environment

# Server Configuration
PORT=3001
NODE_ENV=production

# CORS Configuration
# IMPORTANT: Set this to your actual frontend domain
# For Docker Compose with nginx proxy, use your VPS domain/IP
# Examples:
#   CORS_ORIGIN=https://your-domain.com
#   CORS_ORIGIN=http://your-vps-ip
#   CORS_ORIGIN=http://localhost (if accessing via localhost)
CORS_ORIGIN=*

# SMTP Configuration
# Get these from your email provider (Gmail, SendGrid, Mailgun, etc.)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@your-domain.com
SMTP_FROM_NAME=Sistema de Migração

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
